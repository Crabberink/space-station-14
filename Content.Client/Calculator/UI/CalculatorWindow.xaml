<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               xmlns:ui="clr-namespace:Content.Client.Chemistry.UI"
               MinSize="240 400">
    <BoxContainer Orientation="Vertical">
        <!-- The actual display on the calculator -->
        <PanelContainer VerticalExpand="True" SizeFlagsStretchRatio="1" Margin="0 0 0 5">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#36688F"/>
            </PanelContainer.PanelOverride>
            <Label Name="OutputLabel" Text="0" VerticalExpand="True" SizeFlagsStretchRatio="1" Align="Right" StyleClasses="CalculatorText"/>
        </PanelContainer>
        <BoxContainer Orientation="Vertical" VerticalExpand="True" SizeFlagsStretchRatio="6">
            <!-- The buttons for the calculator. Grid container abomination -->
            <GridContainer Rows="1" SizeFlagsStretchRatio="1" VerticalExpand="True" Margin="0 0 0 3">
                <Button Name="MSButton"
                        Text="MS"
                        VerticalExpand="True"
                        HorizontalExpand="True"/>
                <Button Name="MRButton"
                        Text="MR"
                        VerticalExpand="True"
                        HorizontalExpand="True"/>
                <Button Name="MAddButton"
                        Text="M+"
                        VerticalExpand="True"
                        HorizontalExpand="True"/>
                <Button Name="MSubButton"
                        Text="M-"
                        VerticalExpand="True"
                        HorizontalExpand="True"/>
            </GridContainer>
            <BoxContainer Orientation="Horizontal" SizeFlagsStretchRatio="4" VerticalExpand="True">
                <GridContainer Columns="3" Name="NumberGrid" HorizontalExpand="True" SizeFlagsStretchRatio="3">
                    <!-- Filled by code -->
                </GridContainer>
                <GridContainer HorizontalExpand="True" Columns="1" SizeFlagsStretchRatio="1" Margin="3 0 0 0">
                    <Button Name="DivButton"
                            Text="&#x00f7;"
                            VerticalExpand="True"
                            HorizontalExpand="True"/>
                    <Button Name="MulButton"
                            Text="&#x00d7;"
                            VerticalExpand="True"
                            HorizontalExpand="True"/>
                    <Button Name="AddButton"
                            Text="+"
                            VerticalExpand="True"
                            HorizontalExpand="True"/>
                    <Button Name="SubButton"
                            Text="-"
                            VerticalExpand="True"
                            HorizontalExpand="True"/>
                </GridContainer>
            </BoxContainer>
            <GridContainer Rows="1" SizeFlagsStretchRatio="1" VerticalExpand="True" Margin="0 3 0 0">
                <Button Name="NegButton"
                        Text="&#x00b1;"
                        VerticalExpand="True"
                        HorizontalExpand="True"/>
                <Button Name="SqrtButton"
                        Text="&#x221a;"
                        VerticalExpand="True"
                        HorizontalExpand="True"/>
                <Button Name="BackButton"
                        Text="&#x232b;"
                        VerticalExpand="True"
                        HorizontalExpand="True"/>
                <Button Name="EqButton"
                        Text="="
                        VerticalExpand="True"
                        HorizontalExpand="True"
                        StyleClasses="ButtonColorOrange"/>
            </GridContainer>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
